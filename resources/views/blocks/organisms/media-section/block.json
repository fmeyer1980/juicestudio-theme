{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "acf/media-section",
  "title": "Media section",
  "description": "En intro-sektion med billede og tekst, bygget med ACF og Blade.",
  "category": "layout",
  "icon": "align-full-width",
  "keywords": ["hero", "banner", "acf"],
  "script": "file:./script.js",
  "acf": {
    "blockVersion": 3,
    "renderCallback": "App\\render_acf_block"
  },
  "supports": {
    "color": {
      "text": true,
      "background": true,
      "gradients": true
    },
    "spacing": {
      "padding": ["top", "bottom"]
    },
    "anchor": true,
      "align": ["full"],
      "mode": true,
      "jsx": true,
      "innerBlocks": true
  },
   "attributes": {
    "align": {
      "type": "string",
      "default": "full"
    }
  }
}
