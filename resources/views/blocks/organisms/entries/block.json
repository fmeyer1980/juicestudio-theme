{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "acf/entries",
  "title": "Entries",
  "description": "En intro-sektion med billede og tekst, bygget med ACF og Blade.",
  "category": "layout",
  "icon": "align-full-width",
  "keywords": ["hero", "banner", "acf"],
  "acf": {
    "blockVersion": 3,
    "renderCallback": "App\\render_acf_block"
  },
  "supports": {
    "spacing": {
      "padding": ["top", "bottom"]
    },
    "anchor": true,
    "mode": true,
    "align": ["full"],
    "jsx": true
  },
  "attributes": {
    "align": {
      "type": "string",
      "default": "full"
    }
  }
}
